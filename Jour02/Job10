#include <iostream>
#include <cmath>
using namespace std;

int main() {
    float nombre;

    while (true) {
        cout << "Entrez un nombre positif (0 pour arrêter) : ";
        cin >> nombre;

        if (nombre == 0) {
            break;
        }

        if (nombre < 0) {
            cout << "svp positif" << endl;
        } else {
            float racine_carree = sqrt(nombre);
            cout << "Sa racine carrée est : " << racine_carree << endl;
        }
    }

    return 0;
}
