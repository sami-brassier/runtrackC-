#include <iostream>
using namespace std;

int main() {
    int a = 10;
    int b = 20;
    int c = 30;
    int *ptr_a = &a;
    int *ptr_b = &b;
    int *ptr_c = &c;
    cout << "Valeurs initiales des variables :" << endl;
    cout << "a = " << a << endl;
    cout << "b = " << b << endl;
    cout << "c = " << c << endl;
    *ptr_a = 100;
    *ptr_b = 200;
    *ptr_c = 300;
    cout << "\nNouvelles valeurs des variables aprÃ¨s modification via les pointeurs :" << endl;
    cout << "a = " << a << endl;
    cout << "b = " << b << endl;
    cout << "c = " << c << endl;
    return 0;
}
