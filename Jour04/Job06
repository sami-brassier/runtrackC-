#include <iostream>
using namespace std;

int main() {
    int entier = 17;
    float flottant = 3.14;
    double reel = 123.345;
    const char* caractere = "La Plateforme";
    cout << "Adresse mémoire de la variable entier : " << &entier << ", Valeur : " << entier << endl;
    cout << "Adresse mémoire de la variable flottant : " << &flottant << ", Valeur : " << flottant << endl;
    cout << "Adresse mémoire de la variable reel : " << &reel << ", Valeur : " << reel << endl;
    cout << "Adresse mémoire de la variable caractere : " << (void*)&caractere << ", Valeur : " << caractere << endl;
    return 0;
}
